<h1>Nos Produits</h1>

<div class="produits-grid">
  <% @produits.each do |produit| %>
    <div class="produit-card">
      <% if produit.image.attached? %>
        <%= image_tag produit.image, alt: produit.name, class: "produit-image" %>
      <% else %>
        <p>Pas d'image</p>
      <% end %>

      <h2><%= link_to produit.name, produit_path(produit) %></h2>
      <p><%= number_to_currency(produit.price, unit: "â‚¬") %></p>
    </div>
  <% end %>
</div>
